{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "ES5",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "allowJs": true
  },
  "exclude": ["node_modules", "lib", "jest.config.js", "coverage", "*.test.ts", "interface.ts"]
}

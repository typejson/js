{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "allowJs": true
  },
  "exclude": ["node_modules", "lib"]
}
